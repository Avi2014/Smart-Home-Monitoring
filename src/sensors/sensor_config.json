{
  "mqtt": {
    "broker": "95c2f02d61404267847ebc19552f72b0.s1.eu.hivemq.cloud",
    "port": 8883,
    "client_id_prefix": "iot_sensor",
    "keepalive": 60,
    "qos": 1,
    "use_tls": true,
    "topics": {
      "temperature": "hostel/room1/temperature",
      "humidity": "hostel/room1/humidity",
      "co2": "hostel/room1/co2",
      "light": "hostel/room1/light"
    }
  },
  "sensors": {
    "temperature": {
      "enabled": true,
      "min_value": 18.0,
      "max_value": 35.0,
      "normal_range": [20.0, 28.0],
      "unit": "Â°C",
      "sampling_rate": 3,
      "variance": 0.5
    },
    "humidity": {
      "enabled": true,
      "min_value": 30.0,
      "max_value": 80.0,
      "normal_range": [40.0, 60.0],
      "unit": "%",
      "sampling_rate": 3,
      "variance": 2.0
